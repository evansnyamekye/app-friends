<div id="<%= dom_id friend %>">
  
<div class="jumbotron">
  <h1 class="display-4">
  <%= friend.first_name %>
  <%= friend.last_name %>
  </h1>
  <p class="lead"><%= friend.email %> | <%= friend.phone %> | <%= friend.twitter %>
  <p class="lead">
  <%= link_to "Edit", edit_friend_path(@friend), class:"btn btn-secondary" %> 
  <%= link_to "Back", friends_path, class:"btn btn-dark" %>
  <%= button_to "Delete friend", @friend, method: :delete, class: "border rounded-2 border-0 m-2 fw-light btn btn-info"%>
  </p>
</div>