
<div class="container">
 
  <table class="table table-striped table-bordered table-hover">
  <thead class="table-dark">
      <tr>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Email</th>
        <th>Twitter</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @friends.each do |friend| %>
        <tr>
          <td><%= friend.first_name %></td>
          <td><%= friend.last_name %></td>
          <td><%= friend.email %></td>
          <td><%= friend.twitter %></td>
          <td>
            <%= link_to 'Show', friend, class: 'btn btn-primary' %>
            <%= link_to 'Edit', edit_friend_path(friend), class: 'btn btn-warning' %>
            <%= link_to 'Delete', friend, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<%= link_to "New friend", new_friend_path, class:"btn btn-secondary"%>
